# Core
NODE_ENV=production
PORT=3000
API_URL=https://api.yourveritydomain.com
WS_URL=wss://api.yourveritydomain.com
APP_URL=https://yourveritydomain.com
APP_ORIGINS=https://yourveritydomain.com
REFRESH_COOKIE_SAMESITE=strict
REFRESH_COOKIE_DOMAIN=
PUSH_DISPATCH_WEBHOOK_URL=

# Database (PostgreSQL)
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DB?sslmode=require

# Redis
REDIS_URL=rediss://:PASSWORD@HOST:6380

# JWT
JWT_SECRET=change_me
JWT_ACCESS_SECRET=change_me
JWT_REFRESH_SECRET=change_me
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d

# Agora
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate
AGORA_TOKEN_TTL_SECONDS=45

# Hive Moderation
HIVE_STREAM_URL=https://your-hive-stream-endpoint
HIVE_SCREENSHOT_URL=https://your-hive-screenshot-endpoint
HIVE_API_KEY=your_hive_key
HIVE_WEBHOOK_SECRET=your_hive_webhook_secret
MODERATION_ADMIN_KEY=change_me

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_SUCCESS_URL=https://yourveritydomain.com/payments/success
STRIPE_CANCEL_URL=https://yourveritydomain.com/payments/cancel
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PLUS=price_...
STRIPE_PRICE_PRO=price_...
